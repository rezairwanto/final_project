<h1>show Product</h1>
 
<%= form_for @product do |f| %>
<% if @product.errors.any? %>
       <div class="error_message">
       <ul>
          <% for message in @product.errors.full_messages %>
          <%= message %>
          <% end %>
       </ul>
<% end %>
<%= f.label :name %> : 
<%= @product.name %><br />
<%= f.label :description %> : 
<%= @product.description %><br />
<%= f.label :price %> : 
<%= @product.price %><br />
<%= f.label :weight %> : 
<%= @product.weight %><br />
<%= f.label :category %> : 
<% if @category_name != nil %>
  <%= @category_name.name %><br />
<% end %>
<%= f.label :seller %> : 
<% if @user_name != nil %>
  <%= @user_name.name %><br />
<% end %>
<%= f.label :contact %> : 
<%= @user_name.email %><br />
<% if current_user.nil? %>
  <% else %>
    <% if @product.user_id == current_user.id %>
        <%= link_to "edit", edit_product_path %>
      <% end %>
  <% end %>
<% end %>
