<h1>Listing Category</h1>

<%= link_to "new category", new_admin_category_path, :controller=>"admin/categories" %><br/>
<table>
  <tr>
    <th>Name</th>
    <th>Parent Category</th>
  </tr>
  <% @category.each do |f| %>
  <tr>
    <td><%= f.name%></td>
     <% @parent_name = Category.find_by_id(f.parent_id) %>
    <% if @parent_name != nil %>
    <td><%= @parent_name.name%></td>
    <% else %>
    <td></td>
    <% end %>
    <td><%= link_to "Edit", {:action => "edit", :id => f.id} %></td>
    <td><%= link_to "Delete", {:action => "destroy", :id => f.id}, :confirm => "Are you sure you want to delete  this article?", :method => "delete" %></td>
    <td><%= link_to "show", {:action => "show", :id => f.id} %></td>
  </tr>

<% end %>
</table>
<br />


