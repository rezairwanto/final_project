<h1>Show Article</h1>

<h2>Title</h2>
<h3><%= @article.title %></h3>
<h2>Body</h2>
<h3><%= @article.body %></h3>
<h4>rating <%= @article.rating %></h4>
<h4> Comment </h4>

<div id="comments">
  <% @comments.each do |comment| %>
    <% if comment.article_id == @article.id %>
    <%= comment.content %><br />
    <% end %>
  <% end %>
</div><br /><br />
<div>
<% unless(current_user.nil?)%>
   <%= form_for @comment, :url => comments_path do |f| %>
      <%= f.text_area :content %>
      <%= f.hidden_field :article_id, :value => @article.id %>
      <br />
      <%= submit_tag "comment" %>
  <% end %>
<% end %>
</div>




